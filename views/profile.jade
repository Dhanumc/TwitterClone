//output:profile.html

extends layout

block content
  div(class="modal fade" tabindex="-1" role="dialog" id="myModal")
     div(class="modal-dialog" role="document")
        div(class="modal-content")
           div(class="modal-header")
              h3(class="modal-title") Compose New Tweet
           div(class="modal-body")
              div(class="modal-form")
                 form(class="tweet-form" method="post" action="/newStatus")
                    div(class="tweet-content")
                       .row
                          div(class="col-sm-12")
                             textarea(rows="4", cols="60", name="status", style="min-width:100%")
                       .row
                          div(class="tweetToolbar")
                             div(class="col-sm-9")
                                input(type="file" value="Upload Pic" class="btn btn-info btn-sm" id="fileInput")
                                button(class="btn btn-info btn-sm fakeFile") Upload file 
                                button(type="file" value="Upload gif" class="btn btn-info btn-sm") Upload GIF
                                button(type="" value="Add poll" class="btn btn-info btn-sm") Add poll
                                button(type="" value="location" class="btn btn-info btn-sm") Location
                             div(class="col-sm-3")
                                div(class="floatmeright" style="float: right;")
                                   span(class="counter") 140
                                   button(type="submit" value="Tweet!!" class="btn btn-info btn-sm") Tweet

  navbar.navbar.navbar-default.navbar-fixed-top
    .container
      ul.nav.navbar-nav
        li.active
          a(href='#') Home
        li
          a(href='#about') About
      ul.nav.navbar-nav.navbar-right
        li
          form(class="form-inline")
            div(class="form-group")
              input(type="text" class="form-control" placeholder="Search")
            button(type="submit" class="btn btn-default") Submit
        li
           img(src="https://placehold.it/32x32")
        li
           button(type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal") New Tweet
          
            
  .jumbotron#profilePageJumbo
      img(src="#{user.headerImage}")
      form(id="uploadForm" action="/uploadHeaderPic" method="POST" enctype="multipart/form-data" style="text-align:center;display:none;position: relative; top: 50%; bottom: 50%;")
          label(class="myFile")
             img(src="http://wscont1.apps.microsoft.com/winstore/1x/c37a9d99-6698-4339-acf3-c01daa75fb65/Icon.13385.png" alt="")
             input(type="file", name="file",  class="btn btn-info btn-sm", id="file")
    .container

  navbar.navbar.navbar-default.navbar-staic-top
    .row(style="background-color: white; border-bottom: 1px solid rgb(227, 227, 227);")
        div(class="col-sm-offset-5 col-sm-7")
          .container
            ul.nav.navbar-nav
              li.active
                a(href='#') Tweets
                span(id="numOfTweets") 500
              li
                a(href='#') Following
                span(id="numFollowing") N/A
              li
                a(href='#') Followers
                span(id="numOfFollowers") N/A
              li
                a(href='#') Likes
                span(id="numOfLikes") N/A
              li
                a(href='#') Lists
                span(id="numOfLists") N/A
              li(style="float:right")
                input(type="submit", class="editUser btn btn-default", value="Edit Profile")
   
  .container
    .row
        div(class="col-sm-4" id="profilePicture")
          img(src="https://pbs.twimg.com/profile_images/470649386197069824/_x_-pp09.jpeg" id="profilePictureImg")
          form(id="uploadProfileForm" action="/uploadProfilePic" method="POST" enctype="multipart/form-data" style="text-align:center;display:none;position: relative; top: 50%; bottom: 50%;")
             label(class="myFile")
                img(src="http://wscont1.apps.microsoft.com/winstore/1x/c37a9d99-6698-4339-acf3-c01daa75fb65/Icon.13385.png" alt="")
                input(type="file", name="profileFileUpload",  class="btn btn-info btn-sm", id="profileFileUpload")
    .row
     div(class="col-sm-3" id="userProfileCard")
       p(class="realName") Welcome #{user.name}
       p(class="username") @#{user.username}
       p(class="userDescription") #{user.description}
       p Joined #{user.created_at}
     div(class="col-sm-8 well well-sm", style="float:right;background-color:white", id="twitterStatuses")
       h2(id="statusTitle") Statuses
       ul
           hr
           - each val in statuses
             li
               img(src="https://placehold.it/50x50" style="float:left;padding-right:20px")
               p 
                  strong #{user.name} @#{user.username} 
                  span=val.updated_at
               p(class="statusText")=val.status
               br
               div.buttons
                 input(type="submit", class="editable btn btn-default",  id= val._id, value="Edit")
                 form(action="/delete" method="POST")
                   input(type="hidden", name="statusid", value=val._id)
                   input(type="submit", value="Delete", class="btn btn-default")
               br
             hr
