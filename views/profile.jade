extends layout

block content
  div.jumbotron.text-center
    div(class="col-sm-8.col-sm-offset-2")
      p Welcome #{user}
      div.alert-success #{newStatus}
      form(action="/newstatus" method="POST")
        label Status:
        textarea(rows="4", cols="50", name="status")
        br
        input(type="submit" value="Post status")

        h2 All your statuses
        ul
          - each val in statuses
            li= val.status
              input(type="submit", class="editable btn btn-default",  id= val._id, value="Edit")
              form(action="/delete" method="POST")
                input(type="hidden" name="statusid" value=val._id)
                input(type="submit", value="Delete")
